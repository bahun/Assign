
@{
    ViewBag.Title = "MediaRadar Ad List ";
}
<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/MediaRadar.js"></script>
    <link href="~/Content/index.css" rel="stylesheet" />
    

</head>
<body>
    <div >
        <label for="from">From</label>
        <input type="text" id="from" name="from">
        <label for="to">To</label>
        <input type="text" id="to" name="to">
        <input type="button" id="btnSearch" value="Search" />
     </div>
    <br />
    <form action="" id="frmSel">
        <input type="radio" name="rptType" value="0" />"all"<br/>
        <input type="radio" name="rptType" value="1" />"Cover"<br />
        <input type="radio" name="rptType" value="2" />"Top 5 Distinct"<br />
        <input type="radio" name="rptType" value="3" />"Top 5"<br />
    </form>

    @{
        var grid = new WebGrid(Model, canPage: true, rowsPerPage: 10,
        selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
        grid.Pager(WebGridPagerModes.All);
    }

    <div id="gridContent">
        @grid.GetHtml(tableStyle: "webGrid",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        selectedRowStyle: "select",
                        columns: grid.Columns(
                        grid.Column("AdId", "AD ID"),
                        grid.Column("NumPages", "Number of Pages"),
                        grid.Column("Brand.BrandName", "Brand Name"),
                        grid.Column("Position", "Position")
                        ))

    </div>


</body>
<foot>

</foot>
</html>

